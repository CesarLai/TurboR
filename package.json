{
  "name": "@cesarlai/turbor",
  "version": "0.0.1",
  "description": "A React framework bundle tool, supporting TypeScript.",
  "author": "Cesar Lai <git@cesarlai.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:CesarLai/TurboR.git"
  },
  "license": "MIT",
  "homepage": ".",
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register -P tsconfig.json",
    "prebuild": "rimraf dist",
    "build": "tsc && tsc-alias",
    "lint": "eslint ./ --ext .ts,.tsx --color --fix",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "bin": {
    "turbor": "bin/turbor.js"
  },
  "files": [
    "**/*.d.ts",
    "**/*.js.map",
    "**/*.js",
    "CHANGELOG.md",
    "README.md",
    "package.json",
    "tsconfig.tsbuildinfo"
  ],
  "keywords": [
    "react",
    "typescript",
    "compiler",
    "webpack",
    "swc",
    "commander"
  ],
  "dependencies": {
    "chalk": "^5.0.1",
    "commander": "^9.3.0",
    "json5": "^2.2.1",
    "node-emoji": "^1.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@commitlint/types": "^17.0.0",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.26",
    "@swc/jest": "^0.2.24",
    "@types/node": "^17.0.45",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "commitizen": "^4.2.4",
    "conventional-changelog": "^3.1.25",
    "conventional-changelog-cli": "^2.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "crypto-browserify": "^3.12.0",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "lint-staged": "^13.0.1",
    "mini-css-extract-plugin": "^2.7.2",
    "path-browserify": "^1.0.1",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.1",
    "swc-loader": "^0.2.3",
    "ts-node": "^10.8.1",
    "tsc-alias": "^1.6.10",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.8.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "packageManager": "pnpm@7.3.0",
  "engines": {
    "node": ">= 14.6.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pnpm run eslint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*{.js,.jsx,.ts,.tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
